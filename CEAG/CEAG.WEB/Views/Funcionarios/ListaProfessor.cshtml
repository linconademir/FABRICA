@model IEnumerable<CEAG.WEB.ViewModel.FuncionarioDisciplina.FuncionarioDisciplinaExibicaoViewModel>

@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">×</span><span class="sr-only">Close</span>
            </button>
            <table align="center">
                <tr>
                    <td align="center">
                        <h3 class="modal-title"><b>SELECIONE O PROFESSOR</b></h3>
                    </td>
                </tr>
            </table>
        </div>
        <div class="modal-body">
            <table class="table table-striped table-hover" id="tblConsulta">
                <thead class="btn-primary">
                    <tr>
                        <td align="center">
                            <b>STATUS</b>
                        </td>
                        <th>
                            @Html.DisplayNameFor(model => model.Funcionario.Nome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Funcionario.Titulacao)
                        </th>
                        <th>
                            DISCIPLINAS
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @if (!item.Funcionario.NaTurma)
                            {
                                <td width="20%" align="center">
                                    @Html.ActionLink("SELECIONAR", "AdicionarProfessor", "Turmas", new { codTurma = ViewBag.CodTurma, codFuncionario = item.CodFuncionario }, new { @class = "btn-primary but_clientes", title = "Selecionar este Professor" })

                                </td>
                            }
                            else
                            {
                                <td width="20%" align="center">
                                    PROFESSOR NA TURMA
                                </td>
                            }
                            <td width="30%">
                                @Html.DisplayFor(modelItem => item.Funcionario.Nome)
                            </td>
                            <td width="10%">
                                @Html.DisplayFor(modelItem => item.Funcionario.Titulacao)
                            </td>
                            <td width="20%">
                                @Html.DisplayFor(modelItem => item.Funcionario.Disciplinas)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn-primary but_clientes" data-dismiss="modal">FECHAR</button>
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
