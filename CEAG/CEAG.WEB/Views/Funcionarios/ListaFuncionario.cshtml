@model IEnumerable<CEAG.WEB.ViewModel.Funcionario.FuncionarioExibicaoViewModel>

<div class="modal-dialog" >
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">×</span><span class="sr-only">Close</span>
            </button>
            <table align="center">
                <tr>
                    <td align="center">
                        <h3 class="modal-title"><b>SELECIONE O FUNCIONARIO</b></h3>
                    </td>
                </tr>
            </table>
        </div>
        <div class="modal-body">
                <table class="table table-striped table-hover" id="tblConsulta">
                    <thead class="btn-primary">
                        <tr>
                            <th align="center">
                                
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Nome)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CpfComMascara)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Titulacao)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            @if (!item.Professor)
                            {
                                <td width="100px" align="center">
                                    @Html.ActionLink("SELECIONAR", "Create", "FuncionarioDisciplinas", new { codFuncionario = item.CodFuncionario }, new { @class = "btn-primary but_clientes", title = "Selecionar este Funcionário" })
                                </td>

                            }
                            else
                            {
                                <td width="20%" align="center">
                                    PROFESSOR DA ESCOLA
                                </td>
                            }

                            <td width="350">
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                            <td width="120">
                                @Html.DisplayFor(modelItem => item.CpfComMascara)
                            </td>
                            <td width="120">
                                @Html.DisplayFor(modelItem => item.Titulacao)
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary but_clientes" data-dismiss="modal">FECHAR</button>
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->


