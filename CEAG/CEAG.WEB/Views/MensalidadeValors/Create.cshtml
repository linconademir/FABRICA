@model CEAG.WEB.ViewModel.MensalidadeValores.MensalidadeValorViewModel

@{
    ViewBag.Title = "Cadastro de Mensalidades";
}

<div class="containerLopus">
    <div>
        <img src="" />
        <h3><img alt="Brand" height="100" width="100" src="~/Images/Browser/calcreg.png" /> CADASTRO DE VALORES MENSAIS</h3>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.CodEscola)

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <fieldset>
            <legend>TIPO DE TURMA</legend>
            <div class="form-group">
                @Html.LabelFor(model => model.Turma, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Turma, (SelectList)ViewBag.DropdownListaNivel, new { @class = "form-control", data_live_search = "true", id = "ddlTurma" })
                </div>
            </div>

        </fieldset>

        <fieldset>
            <legend>ANUAL</legend>
            <div class="form-group">
                @Html.LabelFor(model => model.ValorAnual, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.EditorFor(model => model.ValorAnual, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                @Html.LabelFor(model => model.ValorAnualVista, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.EditorFor(model => model.ValorAnualVista, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </fieldset>

        <fieldset>
            <legend>MENSALIDADE</legend>
            <div class="form-group">
                @Html.LabelFor(model => model.ValorMensal, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.EditorFor(model => model.ValorMensal, new { htmlAttributes = new { @class = "form-control" } })
                </div>

              
            </div>
        </fieldset>

        <fieldset>
            <legend>DESCONTOS</legend>
            @Html.LabelFor(model => model.ValorDescontoAntecipacao, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.ValorDescontoAntecipacao, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.LabelFor(model => model.ValorDescontoIrmao, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.ValorDescontoIrmao, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.LabelFor(model => model.ValorTaxaMaterial, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.ValorTaxaMaterial, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </fieldset>

        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-offset-5 col-si-offset-5 col-md-10">
                <button type="submit">
                    <img src="~/images/Browser/ok.png" width="50" height="50" data-toggle="modal" data-target="#modal-mensagem" />
                </button>
                <button type="button" onclick="location.href='@Url.Action("Index", "MensalidadeValors")'">
                    <img src="~/images/Browser/cancel.png" data-toggle="modal" data-target="#modal-mensagem" width="50" height="50" />
                </button>
            </div>
        </div>

    </div>
    }

</div>
