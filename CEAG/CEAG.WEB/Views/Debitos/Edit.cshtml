@model CEAG.WEB.ViewModel.Debito.DebitoViewModel

@{
    ViewBag.Title = "Alterar Débito";
}

<div class="containerLopus">
    <div>
        <img src="" />
        <h3><img alt="Brand" height="100" width="100" src="~/Images/Browser/budget.png" /> ALTERAÇÃO DE DÉBITO DE ALUNO</h3>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.CodAlunoMatricula)
        @Html.HiddenFor(model => model.CodDebito)
        @Html.HiddenFor(model => model.Inclusao)
        @Html.HiddenFor(model => model.Observacao)
        @Html.HiddenFor(model => model.Periodo)
        @Html.HiddenFor(model => model.Responsavel)

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <fieldset>
                <legend>DADOS DO DÉBITO</legend>
                <div class="form-group">
                    @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label col-md-2 col-lg-2" })
                    <div class="col-md-3 col-lg-4">
                        @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", @placeholder = "Descrição do débito" } })
                        @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                    </div>
                    @Html.LabelFor(model => model.FormaPagamento, htmlAttributes: new { @class = "control-label col-md-2 col-lg-2" })
                    <div class="col-md-2 col-lg-2">
                        @Html.DropDownListFor(model => model.FormaPagamento, (SelectList)ViewBag.DropdownFormaPagamento, new { @class = "form-control", data_live_search = "true", id = "ddlFormaPagamento" })
                        @Html.ValidationMessageFor(model => model.FormaPagamento, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.TipoDebito, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2 col-lg-2" })
                    <div class="col-md-2">
                        @Html.DropDownListFor(model => model.TipoDebito, (SelectList)ViewBag.DropdownTipoDebito, new { @class = "form-control", data_live_search = "true", id = "ddlTipoDebito" })
                        @Html.ValidationMessageFor(model => model.TipoDebito, "", new { @class = "text-danger" })
                    </div>
                    @Html.LabelFor(model => model.ValorDebito, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2 col-lg-2" })
                    <div class="col-md-1">
                        @Html.EditorFor(model => model.ValorDebito, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                        @Html.ValidationMessageFor(model => model.ValorDebito, "", new { @class = "text-danger" })
                    </div>
                    @Html.LabelFor(model => model.Vencimento, htmlAttributes: new { @class = "control-label col-md-1" })
                    <div class="col-md-2">
                        @Html.EditorFor(model => model.Vencimento, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Vencimento, "", new { @class = "text-danger" })
                    </div>
                </div>
            </fieldset>
        </div>
        <div class="form-group">
            <div class="col-md-offset-5 col-si-offset-5 col-md-10">
                <button type="submit">
                    <img src="~/images/Browser/ok.png" width="50" height="50" data-toggle="modal" data-target="#modal-mensagem" />
                </button>
                <button type="button" onclick="location.href='@Url.Action("Index", "Debitos", new { codAlunoMatricula = Model.CodAlunoMatricula})'">
                    <img src="~/images/Browser/cancel.png" width="50" height="50" data-toggle="modal" data-target="#modal-mensagem" />
                </button>
            </div>
        </div>

    }

</div>

@section Scripts {


    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/validations_pt-br")

}
