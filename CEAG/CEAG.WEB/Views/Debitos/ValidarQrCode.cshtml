@model IEnumerable<CEAG.WEB.ViewModel.Debito.DebitoExibicaoViewModel>

@{
    ViewBag.Title = "Validar QrCode";
}


<div class="containerLopus">
    <div>
        <img src="" />
        <h3><img alt="Brand" height="100" width="100" src="~/Images/Browser/qrcode.png" /> VALIDAR CODE</h3>
    </div>
    <hr />
    @using (Html.BeginForm("ValidarQrCode", "Debitos", FormMethod.Get))
    {
        <div class="row">
            <div class="col-md-5 col-lg-5 col-sm-5">
                @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control form-control-custom", @style = "width:90%;", @placeholder = "Digite o codigo gerado no QR" })
            </div>
            <div class="col-lg-3 col-sm-3 col-md-3">
                <input type="submit" id="btnPesquisar" class="btn-primary but_clientes" value="PESQUISAR" data-toggle="modal" data-target="#modal-mensagem" src="~/images/ImageLink/view-file.png" />
            </div>
        </div>
        <br />
    }
    <table class="table table-striped table-hover" id="tblConsulta">
        <thead class="btn-primary">
            <tr>
                <th class="cabecalho">
                    @Html.DisplayNameFor(model => model.AlunoExibicaoViewModel.Nome)
                </th>
                <th class="cabecalho">
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th class="cabecalho">
                    @Html.DisplayNameFor(model => model.ValorDebito)
                </th>
                <th class="cabecalho">
                    @Html.DisplayNameFor(model => model.ValorPago)
                </th>
                <th class="cabecalho">
                    @Html.DisplayNameFor(model => model.Vencimento)
                </th>
                <th class="cabecalho">
                    @Html.DisplayNameFor(model => model.Pagamento)
                </th>
                <th class="cabecalho">
                    @Html.DisplayNameFor(model => model.Status)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="300">
                        @Html.DisplayFor(modelItem => item.AlunoExibicaoViewModel.Nome)
                    </td>
                    <td width="220" align="center">
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td width="100px" align="center">
                        @Html.DisplayFor(modelItem => item.ValorDebito)
                    </td>
                    <td width="100px" align="center">
                        @Html.DisplayFor(modelItem => item.ValorPago)
                    </td>
                    <td width="100px" align="center">
                        @Html.DisplayFor(modelItem => item.Vencimento)
                    </td>
                    <td width="100px" align="center">
                        @Html.DisplayFor(modelItem => item.Pagamento)
                    </td>
                    <td width="100px" align="center">
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <hr class="btn-primary" />
    <div class="form-group">
        <div class="col-md-offset-5 col-si-offset-5 col-md-10">
            <a href="@Url.Action("Index","Home")">
                <img src="@Url.Content("~/images/Browser/cancel.png")" width="50" height="50" data-toggle="modal" data-target="#modal-mensagem" title='Voltar para a tela inicial' />
            </a>
        </div>
    </div>
</div>

