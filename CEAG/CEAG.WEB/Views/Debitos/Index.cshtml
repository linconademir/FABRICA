@model PagedList.IPagedList<CEAG.WEB.ViewModel.Debito.DebitoExibicaoViewModel>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Débitos do Aluno";
}


<div class="containerLopus">
    <div>
        <img src="" />
        @if (Model.Any())
        {
            if (Model[0].AlunoExibicaoViewModel.Sexo.ToUpper() == "MASCULINO")
            {
                <h3><img alt="Brand" height="100" width="100" src="~/Images/Browser/budget.png" /> LISTA DE DÉBITOS DO ALUNO @Model[0].AlunoExibicaoViewModel.Nome : { @Model.Count().ToString() DÉBITOS NESTA PÁGINA }</h3> <h3 class="btn-danger"> @ViewBag.MessageError</h3>

            }
            else
            {
                <h3><img alt="Brand" height="100" width="100" src="~/Images/Browser/budget.png" /> LISTA DE DÉBITOS DA ALUNA @Model[0].AlunoExibicaoViewModel.Nome : { @Model.Count().ToString() DÉBITOS NESTA PÁGINA }</h3> <h3 class="btn-danger"> @ViewBag.MessageError</h3>
            }
        }
        else
        {
            <h3><img alt="Brand" height="100" width="100" src="~/Images/Browser/budget.png" /> LISTA DE DÉBITOS: { @Model.Count().ToString() DÉBITOS NESTA PÁGINA }</h3> <h3 class="btn-danger"> @ViewBag.MessageError</h3>
        }

    </div>
    @using (Html.BeginForm("Create", "Debitos", FormMethod.Get))
    {
        <div>
            <input type="hidden" name="codAlunoMatricula" value="@ViewBag.CodAlunoMatricula" />
            <input type="submit" id="btnAdicionar" class="btn-primary but_clientes" data-toggle="modal" data-target="#modal-mensagem" value="+ ADICIONAR DÉBITO" />
        </div>
    }
    <hr />
    <table class="table table-striped table-hover" id="tblConsulta">
        <thead class="btn-primary">
            <tr>
                <th class="cabecalho">
                    @Html.DisplayNameFor(model => model[0].Descricao)
                </th>

                <th class="cabecalho">
                    @Html.DisplayNameFor(model => model[0].ValorDebito)
                </th>
                <th class="cabecalho">
                    @Html.DisplayNameFor(model => model[0].ValorPago)
                </th>
                <th class="cabecalho">
                    @Html.DisplayNameFor(model => model[0].Vencimento)
                </th>
                <th class="cabecalho">
                    @Html.DisplayNameFor(model => model[0].Pagamento)
                </th>
                <th class="cabecalho">
                    @Html.DisplayNameFor(model => model[0].Desconto)
                </th>
                <th class="cabecalho">
                    @Html.DisplayNameFor(model => model[0].Status)
                </th>
                <th class="cabecalho">AÇÕES</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @if (item.Status.Equals("PAGO"))
                    {
                        <td width="400" bgcolor="#2F4F4F">
                            <span style="color: #fff;">
                                @Html.DisplayFor(modelItem => item.Descricao)
                            </span>
                            <h5>
                                <span style="color: #fff;">
                                    Forma Pagamento: @Html.DisplayFor(modelItem => item.FormaPagamento)
                                </span>
                            </h5>

                        </td>
                        <td width="120" align="center" bgcolor="#2F4F4F">
                            <span style="color: #fff;">
                                @Html.DisplayFor(modelItem => item.ValorDebito)
                            </span>
                        </td>
                        <td width="100px" align="center" bgcolor="#2F4F4F">
                            <span style="color: #fff;">
                                @Html.DisplayFor(modelItem => item.ValorPago)
                            </span>
                        </td>
                        <td width="100px" align="center" bgcolor="#2F4F4F">
                            <span style="color: #fff;">
                                @Html.DisplayFor(modelItem => item.Vencimento)
                            </span>
                        </td>
                        <td width="100px" align="center" bgcolor="#2F4F4F">
                            <span style="color: #fff;">
                                @Html.DisplayFor(modelItem => item.Pagamento)
                            </span>
                        </td>
                        <td width="100px" align="center" bgcolor="#2F4F4F">
                            <span style="color: #fff;">
                                @Html.DisplayFor(modelItem => item.Desconto)
                            </span>
                        </td>
                        <td width="100px" bgcolor="#2F4F4F" align="center">
                            <span style="color: #fff;">@Html.DisplayFor(modelItem => item.Status)</span>
                        </td>
                    }
                    else
                    {
                        if (item.Status.Equals("VENCIDO"))
                        {
                            <td width="400" bgcolor="#FF4500">
                                <span style="color: #fff;">
                                    @Html.DisplayFor(modelItem => item.Descricao)
                                </span>
                                <h5>
                                    <span style="color: #fff;">
                                        Forma Pagamento: @Html.DisplayFor(modelItem => item.FormaPagamento)
                                    </span>
                                </h5>

                            </td>
                            <td width="120" align="center" bgcolor="#FF4500">
                                <span style="color: #fff;">
                                    @Html.DisplayFor(modelItem => item.ValorDebito)
                                </span>
                            </td>
                            <td width="100px" align="center" bgcolor="#FF4500">
                                <span style="color: #fff;">
                                    @Html.DisplayFor(modelItem => item.ValorPago)
                                </span>
                            </td>
                            <td width="100px" align="center" bgcolor="#FF4500">
                                <span style="color: #fff;">
                                    @Html.DisplayFor(modelItem => item.Vencimento)
                                </span>
                            </td>
                            <td width="100px" align="center" bgcolor="#FF4500">
                                <span style="color: #fff;">
                                    @Html.DisplayFor(modelItem => item.Pagamento)
                                </span>
                            </td>
                            <td width="100px" align="center" bgcolor="#FF4500">
                                <span style="color: #fff;">
                                    @Html.DisplayFor(modelItem => item.Desconto)
                                </span>
                            </td>
                            <td width="100px" bgcolor="#FF4500" align="center">
                                <span style="color: #fff;">@Html.DisplayFor(modelItem => item.Status)</span>
                            </td>
                        }
                        else
                        {
                            <td width="400">
                                @Html.DisplayFor(modelItem => item.Descricao)
                                <h5> Forma Pagamento: @Html.DisplayFor(modelItem => item.FormaPagamento) </h5>
                            </td>
                            <td width="120" align="center">
                                @Html.DisplayFor(modelItem => item.ValorDebito)
                            </td>
                            <td width="100px" align="center">
                                @Html.DisplayFor(modelItem => item.ValorPago)
                            </td>
                            <td width="100px" align="center">
                                @Html.DisplayFor(modelItem => item.Vencimento)
                            </td>
                            <td width="100px" align="center">
                                @Html.DisplayFor(modelItem => item.Pagamento)
                            </td>
                            <td width="100px" align="center">
                                @Html.DisplayFor(modelItem => item.Desconto)
                            </td>
                            <td width="100px" align="center">
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                        }
                    }
                    <td width="160px" align="center">
                        @if (!item.Status.Equals("PAGO"))
                        {
                            <a href="@Url.Action("Edit","Debitos", new { codDebito = item.CodDebito})">
                                <img src="@Url.Content("~/images/ImageLink/edit-pie-chart-report.png")" data-toggle="modal" data-target="#modal-mensagem" width="30" height="30" title='Modificar débito' />
                            </a>
                            <a href="@Url.Action("RealizarBaixa","Debitos", new { codDebito = item.CodDebito})">
                                <img src="@Url.Content("~/images/ImageLink/checked.png")" data-toggle="modal" data-target="#modal-mensagem" width="30" height="30" title='Realizar pagamento' />
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("EmitirReciboNovo","EducacionalReports", new { codDebito = item.CodDebito})" target="_blank">
                                <img src="@Url.Content("~/images/ImageLink/recibo.png")" width="30" height="30" title='Imprimir recibo' />
                            </a>

                        }

                        @if (item.Status.Equals("VENCIDO"))
                        {
                            <a href="@Url.Action("Baixar","Debitos", new { codDebito = item.CodDebito})">
                                <img src="@Url.Content("~/images/ImageLink/falar.png")" data-toggle="modal" data-target="#modal-mensagem" width="30" height="30" title='Negociar débito vencido' />
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",
        new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter, codAlunoMatricula = Model[0].CodAlunoMatricula }))

    <hr class="btn-primary" />
    <div class="form-group">
        <div class="col-md-offset-5 col-si-offset-5 col-md-10">
            <a href="@Url.Action("Index","AlunoMatriculas")">
                <img src="@Url.Content("~/images/Browser/cancel.png")" width="50" height="50" data-toggle="modal" data-target="#modal-mensagem" title='Voltar para a lista de opções' />
            </a>
        </div>
    </div>
</div>

