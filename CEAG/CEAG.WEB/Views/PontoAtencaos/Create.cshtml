@model CEAG.WEB.ViewModel.PontoAtencao.PontoAtencaoViewModel

@{
    ViewBag.Title = "Create";
}

<div class="containerLopus">
    <div>
        <img src="" />
        <h3><img alt="Brand" height="100" width="100" src="~/Images/Browser/spam.png" /> INCLUSÃO DE PONTO DE ATENÇÃO</h3>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <fieldset>
                <legend>INFORMAÇÕES</legend>
                <div class="form-group">
                    @Html.LabelFor(model => model.TipoPontoAtencao, htmlAttributes: new { @class = "control-label col-md-2 col-lg-2" })
                    <div class="col-md-3 col-lg-3">
                        @Html.EditorFor(model => model.TipoPontoAtencao, new { htmlAttributes = new { @Value = ViewBag.TipoPontoAtencao, @class = "form-control", autocomplete = "off", @readonly="true" } })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.DescricaoPontoAtencao, htmlAttributes: new { @class = "control-label col-md-2 col-lg-2" })
                    <div class="col-md-10 col-lg-10">
                        @Html.EditorFor(model => model.DescricaoPontoAtencao, new { htmlAttributes = new { @Value = ViewBag.DescricaoPontoAtencao, @class = "form-control", autocomplete = "off", @placeholder = "Descrição do débito" } })
                    </div>
                </div>
            </fieldset>
        </div>
        <div class="form-group">
            <div class="col-md-offset-5 col-si-offset-5 col-md-10">
                <button type="submit">
                    <img src="~/images/Browser/ok.png" width="50" height="50" data-toggle="modal" data-target="#modal-mensagem" />
                </button>
                <button type="button" onclick="location.href='@HttpContext.Current.Request.UrlReferrer.AbsoluteUri'">
                    <img src="~/images/Browser/cancel.png" width="50" height="50" data-toggle="modal" data-target="#modal-mensagem" />
                </button>
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    }

</div>
