@model IEnumerable<CEAG.WEB.ViewModel.PontoAtencao.PontoAtencaoViewModel>

@{
    ViewBag.Title = "Pontos Atenção";
}

<div class="containerLopus">
    <div>
        <img src="" />
        <h3><img alt="Brand" height="100" width="100" src="~/Images/Browser/spam.png" /> PONTOS DE ATENÇÃO PENDENTES</h3>
    </div>

    <hr />

    <table class="table table-striped table-hover" id="tblConsulta">
        <thead class="btn-primary active" >
            <tr>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.DescricaoPontoAtencao)
                </th>
                <th>AÇÕES</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="40px" align="center">
                        <img src="~/Images/Browser/student-male-big.png" width="60" height="60" />
                    </td>
                    <td width="950px">
                        <b>DESCRIÇÃO: </b>
                        @Html.DisplayFor(modelItem => item.DescricaoPontoAtencao)
                        <br />
                        <b>@Html.DisplayNameFor(model => model.TipoPontoAtencao)</b>
                        @Html.DisplayFor(modelItem => item.TipoPontoAtencao)
                        <b>@Html.DisplayNameFor(model => model.Inclusao)</b>
                        @Html.DisplayFor(modelItem => item.Inclusao)
                    </td>
                    <td width="100px">
                        @*@Html.ActionLink("Alterar", "Edit", "Alunos", new { id = item.CodAluno }, new { @class = "btn btn-primary but_grid" })*@
                        <a href="@Url.Action("ResolverPonto","PontoAtencaos", new { codPontoAtencao = item.CodPontoAtencao})">
                            <img src="@Url.Content("~/images/ImageLink/checked.png")" width="30" height="30" data-toggle="modal" data-target="#modal-mensagem" title='Finalizar Pendencia' />
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <hr class="btn-primary" />
    <div class="form-group">
        <div class="col-md-offset-5 col-si-offset-5 col-md-10">
            <a href="@Url.Action("Index","Home")">
                <img src="@Url.Content("~/images/Browser/cancel.png")" width="50" height="50" title='Voltar para a lista de opções' />
            </a>
        </div>
    </div>
</div>

