
@{
    Layout = null;
}
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">×</span><span class="sr-only">Close</span>
            </button>
            <table align="center">
                <tr>
                    <td align="center">
                        <h3 class="modal-title"><b>SELECIONE O ANO</b></h3>
                    </td>
                </tr>
            </table>
        </div>
        <div class="modal-body">
            <table class="table table-striped table-hover" id="tblConsulta">
                <tbody>
                    <tr>
                        <td width="20%" align="center">
                            @Html.ActionLink(DateTime.Now.Year.ToString(), "DuplicarTurma", "Turmas", new { codTurma = ViewBag.CodTurma, anoLetivo = DateTime.Now.Year }, new { @class = "btn-primary but_clientes" })
                        </td>
                    </tr>
                    <tr>
                        <td width="20%" align="center">
                            @Html.ActionLink((DateTime.Now.Year + 1).ToString(), "DuplicarTurma", "Turmas", new { codTurma = ViewBag.CodTurma, anoLetivo = (DateTime.Now.Year + 1) }, new { @class = "btn-primary but_clientes" })
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary but_clientes" data-dismiss="modal">Fechar</button>
        </div>
    </div>
</div>


