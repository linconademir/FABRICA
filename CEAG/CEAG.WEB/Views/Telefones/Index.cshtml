@model IEnumerable<CEAG.WEB.ViewModel.Telefone.TelefoneExibicaoViewModel>

@{
    ViewBag.Title = "Lista de Telefones";
}
<div class="containerLopus">
    <div>
        <br />
        @if (ViewBag.Aluno.Sexo.ToUpper() == "MASCULINO")
        {
            <h3><img alt="Brand" height="100" width="100" src="~/Images/034-cellphone.png" /> Telefones do Aluno: <b>@ViewBag.Aluno.Nome (Telefones: @Model.Count()) </b></h3>

        }
        else
        {
            <h3><img alt="Brand" height="100" width="100" src="~/Images/smartphone-1.png" /> Telefones da Aluna: <b>@ViewBag.Aluno.Nome</b></h3>
        }

    </div>
    <hr />

    @Html.ActionLink("+ ADICIONAR TELEFONE", "Create", "Telefones", new { codAluno = ViewBag.Aluno.CodAluno }, new { @class = "btn btn-primary but_clientes" })

    <br />
    <br />
    <table class="table table-striped table-hover">
        <thead class="btn-primary">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Numero)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tipo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Local)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pessoa)
                </th>
                <th>Ações</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                (@Html.DisplayFor(modelItem => item.Ddd)) @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Local)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pessoa)
            </td>
            <td width="100px">
                @*@Html.ActionLink("Alterar", "Edit", "Alunos", new { id = item.CodAluno }, new { @class = "btn btn-primary but_grid" })*@
                <a href="@Url.Action("Edit","Telefones", new { codTelefone = item.CodTelefone})">
                    <img src="@Url.Content("~/images/ImageLink/edit-pie-chart-report.png")" width="30" height="30" title='Editar o telefone do Aluno' />
                </a>
                <a href="@Url.Action("Delete","Telefones", new { codTelefone = item.CodTelefone})">
                    <img src="@Url.Content("~/images/ImageLink/delete.png")" width="30" height="30" title='Apagar o telefone do Aluno' />
                </a>
            </td>
        </tr>
        }
    </table>
    <hr class="btn-primary" />
    <div class="form-group">
        <div class="col-md-offset-5 col-si-offset-5 col-md-10">
            <a href="@Url.Action("Details","Alunos", new { codAluno = @ViewBag.Aluno.CodAluno})">
                <img src="@Url.Content("~/images/Browser/cancel.png")" width="50" height="50" title='Voltar para a lista de opções' />
            </a>
        </div>
    </div>
</div>