@model CEAG.WEB.ViewModel.Telefone.TelefoneViewModel

@{
    ViewBag.Title = "Excluir Telefone";
}


<div class="containerLopus">
    <div>
        <img src="" />
        @if (ViewBag.Aluno.Sexo.ToUpper() == "MASCULINO")
        {
            <h3><img alt="Brand" height="100" width="100" src="~/Images/034-cellphone.png" /> DESEJA DELETAR O TELEFONE ABAIXO DO ALUNO <b>@ViewBag.Aluno.Nome?</b></h3>

        }
        else
        {
            <h3><img alt="Brand" height="100" width="100" src="~/Images/034-cellphone.png" /> DESEJA DELETAR O TELEFONE ABAIXO DA ALUNA <b>@ViewBag.Aluno.Nome?</b></h3>
        }

    </div>
    <hr />
    <div>
        <fieldset>
            <legend>Dados</legend>
            <dl class="dl-horizontal">

                <dt>
                    @Html.DisplayNameFor(model => model.Tipo)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Tipo)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Numero)
                </dt>

                <dd>
                    (@Html.DisplayFor(model => model.Ddd)) @Html.DisplayFor(model => model.Numero)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Local)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Local)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Pessoa)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Pessoa)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Observacao)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Observacao)
                </dd>
            </dl>


            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="col-md-offset-5 col-si-offset-5 col-md-10">
                    <button type="submit" value="Delete">
                        <img src="~/images/Browser/ok.png" width="50" height="50" data-toggle="modal" data-target="#modal-mensagem"/>
                    </button>
                    <button type="button" onclick="location.href='@Url.Action("Details", "Alunos", new { codAluno = ViewBag.Aluno.CodAluno } )'">
                        <img src="~/images/Browser/cancel.png" data-toggle="modal" data-target="#modal-mensagem" width="50" height="50"/>
                    </button>
                    @*<a href="@Url.Action("Index","Alunos")">
                            <img src="@Url.Content("~/images/Browser/cancel.png")" />
                        </a>*@
                </div>
            }
        </fieldset>
    </div>
</div>
