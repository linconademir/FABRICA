@model CEAG.WEB.ViewModel.Horario.HorarioExibicaoViewModel

@{
    ViewBag.Title = "HORÁRIO";
}
@{
    DateTime anoPeriodo = ViewBag.Data;
}
<div class="containerLopus">
    <div>
        <img src="" />
        <h3><img alt="Brand" height="100" width="100" src="~/Images/Browser/teacher.png" />&nbsp;&nbsp; REALIZAR CHAMADA DA DISCIPLINA <b>@ViewBag.Disciplina.Descricao </b> NA TURMA <b>@ViewBag.Turma.Descricao</b> para a data <b>@anoPeriodo.ToString("dd/MM/yyyy")</b></h3>
    </div>
    <hr />

    <table width="100%">
        <thead class="bg-primary">
            <tr>
                <td height="50" align="center">
                    <h2><b>SELECIONE O HORÁRIO</b></h2>
                </td>
            </tr>
        </thead>
    </table>
    <table class="table table-striped table-hover" id="tblConsulta">
        <thead class="btn-primary">
            <tr>
                <th align="center">

                </th>
                <th>

                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.HorarioAulaViewModels)
            {
                <tr>
                    @if (item.HorarioFechado)
                    {
                        <td width="100px" align="center"  bgcolor="#228B22">
                            <h3>
                                AULA LANÇADA
                            </h3>
                        </td>
                        <td width="350"  bgcolor="#228B22">
                            <h3>
                                @Html.DisplayFor(modelItem => item.Inicio) às @Html.DisplayFor(modelItem => item.Termino)
                            </h3>
                        </td>
                    }
                    else
                    {
                        <td width="100px" align="center">
                            <h3>
                                @Html.ActionLink("SELECIONAR", "Create", "Aulas", new { codDisciplina = ViewBag.CodDisciplina, codTurma = ViewBag.CodTurma, codHorarioAula = item.CodHorarioAula, realizada = anoPeriodo }, new { @class = "btn-primary but_clientes", title = "Selecionar este horário" })
                            </h3>
                        </td>
                        <td width="350">
                            <h3>
                                @Html.DisplayFor(modelItem => item.Inicio) às @Html.DisplayFor(modelItem => item.Termino)
                            </h3>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
    <hr class="btn-primary" />
    <div class="form-group">
        <div class="col-md-offset-5 col-si-offset-5 col-md-10">

            <button type="button" onclick="location.href='@Url.Action("ListaDia", "Aulas", new { codTurma = ViewBag.CodTurma, codDisciplina = ViewBag.CodDisciplina, anoMes = ViewBag.AnoMes })'">
                <img src="~/images/Browser/cancel.png" width="50" height="50" data-toggle="modal" data-target="#modal-mensagem" />
            </button>
        </div>
    </div>
