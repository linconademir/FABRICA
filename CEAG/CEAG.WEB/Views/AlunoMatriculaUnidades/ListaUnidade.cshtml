@model List<int>

@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">×</span><span class="sr-only">Close</span>
            </button>
            <table align="center">
                <tr>
                    <td align="center">
                        <h3 class="modal-title"><b>SELECIONE A UNIDADE</b></h3>
                    </td>
                </tr>
            </table>
        </div>
        <div class="modal-body">
            <table class="table table-striped table-hover" id="tblConsulta" align="center">
                <thead class="btn-primary">
                    <tr>
                        <th align="center">

                        </th>
                        <th>

                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td width="100%" align="center">
                                @Html.ActionLink("UNIDADE " + item, "Create", "AlunoMatriculaUnidades", new { numeroUnidade = item, codTurma = ViewBag.CodTurma }, new { @class = "btn-primary but_clientes", title = "Selecionar esta unidade" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary but_clientes" data-dismiss="modal">Fechar</button>
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
